@model IEnumerable<GPorject.Models.Exercise>

@{
	ViewData["Title"] = "组卷列表";
}

<h2>@ViewData["Title"]</h2>
<p>
	<a asp-action="ExerciseCreate">新建</a>
</p>
<table class="table table-hover">
	<thead>
		<tr>
			<th>
				@Html.DisplayNameFor(model => model.ID)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.Name)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.Type)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.CreateTime)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.UpdateTime)
			</th>
			<th></th>
		</tr>
	</thead>
	<tbody>
@foreach (var item in Model) {
		<tr>
			<td>
				@Html.DisplayFor(modelItem => item.ID)
			</td>
			<td>
				@Html.DisplayFor(modelItem => item.Name)
			</td>
			<td>
				@{
					switch(item.Type)
					{
						case (int)ExerciseType.Practice:
							@:练习
							break;
						case (int)ExerciseType.TextPaper:
							@:试卷
							break;
					}
				}
			</td>
			<td>
				@Html.DisplayFor(modelItem => item.CreateTime)
			</td>
			<td>
				@Html.DisplayFor(modelItem => item.UpdateTime)
			</td>
			<td>
				<a asp-action="SubjectEdit" asp-route-id="@item.ID">编辑</a> |
				<a asp-action="SubjectDetails" asp-route-id="@item.ID">详细</a> |
				<a asp-action="SubjectDelete" asp-route-id="@item.ID" data-confirm="您确定要删除此项吗？">删除</a>
			</td>
		</tr>
}
	</tbody>
</table>
